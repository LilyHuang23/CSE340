<!-- Content Heading -->
<% if (title) { %>
    <h1> <%= title %> </h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- flash messages if any will be displaced as a result of the following line of code -->
<%- messages() %>

<!-- Code block to handle errors -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

 
  <%- table %>

  <a href="/account/messages/<%= locals.accountData.account_id %>">Return to Inbox</a>

  <table id="messageDisplay" class="messageDisplay">
      <thead>
          <tr>
              <th>Received</th>
              <th>Subject</th>
              <th>From</th>
              <th>Read</th>
          </tr>
      </thead>
    
  </table>